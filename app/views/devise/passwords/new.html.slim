.authform
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|

    h3.text-center = I18n.t('devise.user.forgot_your_password')

    - if devise_error_messages! && devise_error_messages! != ""
      .alert.alert-danger = devise_error_messages!
    
    p = I18n.t('devise.user.reset_instructions')

    .form-group
      = f.label :email, I18n.t('devise.user.email')
      = f.email_field :email, :autofocus => true, class: 'form-control'
    = f.submit I18n.t("devise.passwords.reset_password"), :class => 'button right'