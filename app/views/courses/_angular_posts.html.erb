<div class="container-fluid" ng-app="discussCourse">
  <div ng-controller="coursePostsController">
    <h1 class="text-center">
      Discussion
    </h1>

    <div class="row">
      <div class="col-sm-3">
        <input class="form-input col-sm-12" type="text" ng-model="topicList" placeholder="Search by name"></input>

        <br />
        <br />
        
        <ul class="list-group col-sm-12">
          <li ng-repeat="title in threads | filter:topicList" class="list-group-item">
            {{ title }}
          </li>
        </ul>
      </div>
      <div class="col-sm-9">

      </div>
    </div>
  </div>
</div>